<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Express yourself!"
            android:fontFamily="@font/quantico_regular"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3">

            <ImageView
                android:id="@+id/emote_dialog_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/emote_code0"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/emote_dialog_image2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/emote_code1"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/emote_dialog_image3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_row="0"
                android:layout_column="2"
                android:src="@drawable/emote_code2"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/emote_dialog_image4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="35dp"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@drawable/emote_code3"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/emote_dialog_image5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_row="1"
                android:layout_column="1"
                android:src="@drawable/emote_code4"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/emote_dialog_image6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="35dp"
                android:layout_row="1"
                android:layout_column="2"
                android:src="@drawable/emote_code5"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/emote_dialog_image7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="0"
                android:src="@drawable/emote_code6"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/emote_dialog_image8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_row="2"
                android:layout_column="1"
                android:src="@drawable/emote_code7"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/emote_dialog_image9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="2"
                android:src="@drawable/emote_code8"
                android:focusable="true"
                android:clickable="true"/>

        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>